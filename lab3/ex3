#include <stdio.h>
#include <math.h>

void findPartition(int arr[], int n) {
    int totalSum = 0;
    for (int i = 0; i < n; i++)
        totalSum += arr[i];

    if (totalSum % 2 != 0) {
        printf("Partition not possible (total sum is odd).\n");
        return;
    }

    int target = totalSum / 2;
    int powerSetSize = pow(2, n);

    for (int i = 0; i < powerSetSize; i++) {
        int currentSum = 0;


        for (int j = 0; j < n; j++) {
            if (i & (1 << j))
                currentSum += arr[j];
        }

        if (currentSum == target) {
            printf("Partition found! Set 1 elements: ");
            for (int j = 0; j < n; j++) {
                if (i & (1 << j))
                    printf("%d ", arr[j]);
            }
            printf("\n");
            return;
        }
    }

    printf("No partition possible.\n");
}

int main() {
    int arr[] = {3, 1, 5, 9, 12};
    int n = sizeof(arr) / sizeof(arr[0]);
    findPartition(arr, n);
    return 0;
}
